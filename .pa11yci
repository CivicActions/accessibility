{
  "defaults": {
    "concurrency": 1,
    "standard": "WCAG2AA",
    "runners": ["axe", "htmlcs"],
    "ignore": [
      "color-contrast",
      "frame-tested"
    ],
    "chromeLaunchConfig": {
      "args": ["--disable-dev-shm-usage", "--no-sandbox", "--disable-gpu"]
    },
    "reporters": [
      "cli",
      ["./pa11y-reporter-junit.js", { "fileName": "./pa11y-report-junit.xml" }]
    ]
  }
}
